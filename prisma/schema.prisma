generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model IngredientList {
  id          Int      @id @default(autoincrement())
  ingredients String[]   // raw ingredient text (comma-separated)
  recipes     Json?    // store AI response (JSON)
  createdAt   DateTime @default(now())

   @@map("IngredientList")
}
model User {
  id        Int       @id @default(autoincrement())
  fname     String?
  lname     String?
  username  String    @unique
  email     String    @unique
  password  String
  recipes   Recipe[]  // Relation
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Recipe {
  id          Int      @id @default(autoincrement())
  title       String
  ingredients String?   // ðŸ‘ˆ optional
  steps       String?   // ðŸ‘ˆ optional
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime @default(now())
}


